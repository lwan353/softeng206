<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/list_item_text_first_name"
        android:layout_width="100px"
        android:layout_height="wrap_content" />
    
    <TextView 
        android:id="@+id/list_item_text_last_name"
        android:layout_width="100px"
        android:layout_height="wrap_content" />
	
    <TextView 
        android:id="@+id/list_item_text_moblie_ph"
        android:layout_width="160px"
        android:layout_height="wrap_content" />
    
    <TextView 
        android:id="@+id/list_item_text_home_ph"
        android:layout_width="0px"
        android:layout_height="wrap_content" />
    
   	<TextView 
        android:id="@+id/list_item_text_work_ph"
        android:layout_width="0px"
        android:layout_height="wrap_content" />
   	
   	<TextView 
        android:id="@+id/list_item_text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        
    <TextView 
        android:id="@+id/list_item_text_email_address"
        android:layout_width="0px"
        android:layout_height="wrap_content" />
    
   	<TextView 
        android:id="@+id/list_item_text_date_of_birth"
        android:layout_width="0px"
        android:layout_height="wrap_content" />

</LinearLayout>